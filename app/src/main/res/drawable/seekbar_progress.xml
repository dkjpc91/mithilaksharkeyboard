<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFC107"/> <!-- Background color -->
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <shape
            android:shape="rectangle">
            <solid android:color="#00BCD4"/> <!-- Progress color -->
            <size
                android:height="6dp"/> <!-- Thickness of the progress bar -->
        </shape>
    </item>
</layer-list>
