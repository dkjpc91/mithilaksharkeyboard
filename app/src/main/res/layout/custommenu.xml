<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rounded_background"
    android:layout_gravity="center"
    android:padding="16dp">
    <TextView
        android:background="@drawable/rounded_square"
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:text="@string/app_name"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:fontFamily="@font/mithilakshar_dkj"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:padding="12dp"
                android:columnCount="2"
                android:rowCount="5">

            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:id="@+id/posterbackgroundprelist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bg"/>

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="बैकग्राउंड \n लिस्ट"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20dp">

                        </TextView>



                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:id="@+id/posterbackgroundlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:src="@drawable/posterbackgroundlist">

                    </ImageView>

                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="मनपसंद \n लिबैकग्राउंड"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp">

                    </TextView>



                </LinearLayout>


            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:id="@+id/mithilakshar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:src="@drawable/mithilakshar"/>

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="मिथिलाक्षर \n लिखू"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20dp">

                        </TextView>



                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:id="@+id/devnagri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:src="@drawable/hindi">

                        </ImageView>

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="देवनागरी/अंग्रेजी   लिखू"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20dp">

                        </TextView>



                    </LinearLayout>


                </androidx.cardview.widget.CardView>







                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:id="@+id/imageselection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:src="@drawable/picture">

                        </ImageView>

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="फोटो \n लिस्ट "
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20dp">

                        </TextView>



                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:id="@+id/imagelist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:src="@drawable/gallery"/>

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="मनपसंद \nफोटो "
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20dp">

                        </TextView>



                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:id="@+id/shareapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:src="@drawable/appshare">

                        </ImageView>

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ऐप \n शेयर"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20dp">

                        </TextView>



                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </GridLayout>


        </LinearLayout>
    </ScrollView>

    <GridLayout
 android:background="@drawable/downloadsquare"
        android:id="@+id/grid1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="4dp"
        android:layout_gravity="center">

        <!-- First LinearLayout in GridLayout -->
        <LinearLayout

            android:id="@+id/download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:padding="4dp">

            <!-- ImageView -->
            <ImageView
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/download"
                android:contentDescription="@string/app_name" />

            <!-- TextView -->
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="डाउनलोड"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:padding="4dp">

            <!-- ImageView -->
            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/reboot"
                android:contentDescription="@string/app_name" />

            <!-- TextView -->
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"  />
        </LinearLayout>

        <!-- Second LinearLayout in GridLayout -->
        <LinearLayout
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:padding="4dp">

            <!-- ImageView -->
            <ImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/share"
                android:contentDescription="@string/app_name" />

            <!-- TextView -->
            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="पोस्टर शेयर "
                android:gravity="center"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </GridLayout>


    <Button
        android:visibility="gone"
        android:id="@+id/button_option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option 1"
        android:layout_marginTop="16dp" />

    <Button
        android:visibility="gone"
        android:id="@+id/button_option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Option 2" />


</LinearLayout>



